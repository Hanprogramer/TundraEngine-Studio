<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		Width="400" Height="150"
        x:Class="TundraEngine.Studio.Dialogs.MessageBox"
        Title="MessageBox">
  <Grid RowDefinitions="*,32" Margin="8">
	  <TextBlock Text="{Binding Message, Mode=TwoWay}" Grid.Row="0" TextWrapping="Wrap"/>
      <Button Grid.Row="1" HorizontalAlignment="Right" Click="OnOk">Ok</Button>
  </Grid>
</Window>
